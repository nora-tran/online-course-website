---
import { Image } from 'astro:assets';
import Container from '../common/Container.astro';
import graphic01 from '../../assets/images/graphic_01.png';
import { SCHOOL_NAME } from '../../utils/navigation';

const features = [
  {
    title: 'Expert Instructors & High-Quality Content',
    description:
      'Our courses are designed and taught by industry experts, ensuring up-to-date knowledge, engaging lessons, and practical applications.',
  },
  {
    title: 'Flexible & Interactive Learning',
    description:
      'Learn at your own pace with on-demand videos, live sessions, interactive quizzes, and discussion forums to enhance engagement.',
  },
  {
    title: 'Affordable & Accessible Education',
    description:
      'We provide high-quality education at competitive prices, with flexible payment options and free resources for students worldwide.',
  },
  {
    title: 'Recognized Certifications & Career Support',
    description:
      'Earn industry-recognized certificates and gain access to career guidance, resume-building tools, and job placement assistance.',
  },
];
---

<style>
  #about {
    .feature {
      @apply mt-6 px-8 pb-8 pt-14;
      display: flex;
      align-items: center;
      background: white;
      border-radius: 20px;
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
      position: relative;
      flex-direction: column;
      text-align: center;
    }

    .feature-number {
      @apply -top-6 h-16 w-16 bg-primary text-3xl text-white;
      position: absolute;
      display: flex;
      font-weight: bold;
      justify-content: center;
      align-items: center;
      border-radius: 50%;
    }

    .feature-content {
      flex: 1;
    }

    h3 {
      margin: 0;
      font-size: 20px;
      font-weight: bold;
    }

    p {
      margin: 5px 0 0;
      font-size: 16px;
      color: #555;
    }
  }
</style>

<section
  id="about"
  class="flex min-h-screen items-center justify-between bg-gray-100 py-16"
>
  <Container class="flex flex-col items-center py-10">
    <h4
      class="flex flex-wrap items-center justify-center gap-2 text-center font-bold text-primary"
    >
      <span>What make us special at</span><span>{SCHOOL_NAME}?</span>
    </h4>
    <div class="flex flex-col gap-5">
      <div class="flex flex-col items-center">
        <Image
          src={graphic01}
          alt="Graphic female with laptop."
          class="m-5 h-[300px] w-auto"
        />
      </div>

      <div class="grid gap-5 lg:grid-cols-2">
        {
          features.map((feature, index) => (
            <div class="feature">
              <div class="feature-content">
                <h3>{feature.title}</h3>
                <p>{feature.description}</p>
              </div>
              <div class="feature-number">{index + 1}</div>
            </div>
          ))
        }
      </div>
    </div>
  </Container>
</section>
