---
import type { Course } from '../../utils/courses';
import Button from '../common/Button.astro';
import CourseItemImage from './CourseItemImage.astro';
interface Props {
  course: Course;
}
const { course } = Astro.props;
---

<div class="flex flex-col-reverse items-center gap-3 py-5 lg:flex-row">
  <div class="flex-1">
    <h2 class="font-bold">{course.name}</h2>
    <p set:html={course.description} />
    <Button class="btn-primary my-3">Enroll now</Button>
  </div>
  <figure class="m-0 max-w-[500px] flex-1 overflow-hidden bg-gray-200">
    <CourseItemImage
      imagePath={course.imageUrl}
      altText={course?.name ?? 'No avaiable'}
    />
  </figure>
</div>
